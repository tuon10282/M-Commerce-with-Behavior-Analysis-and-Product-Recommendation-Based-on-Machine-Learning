<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ff6750a4"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Nút Back -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_back"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Back" />

            <!-- Ô tìm kiếm -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/design_default_color_background"
                android:hint="Search"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textColorHint="#888" />

            <!-- Giỏ hàng -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@mipmap/ic_cart2"
                android:contentDescription="Cart" />
        </LinearLayout>


        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Highlighted"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Latest"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Best seller"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@mipmap/ic_sort"
                    android:contentDescription="Sort" />
            </LinearLayout>
        </LinearLayout>

        <!-- Lưới sản phẩm 2 cột -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp"
            android:orientation="horizontal">

            <!-- Sản phẩm A -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@mipmap/ic_productA"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product A"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: 100.000 đ"
                    android:textColor="#FF5722"
                    android:textSize="13sp" />
                <!-- Đánh giá và lượt bán -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <!-- Rating -->
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_star" />

                    <!-- Điểm đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:paddingStart="2dp" />

                    <!-- Số lượt đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(49)"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:paddingStart="4dp" />

                    <!-- Icon giỏ hàng và lượt bán -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_cart"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2k/month"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:paddingStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sản phẩm B -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@mipmap/ic_productB"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product B"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: 150.000 đ"
                    android:textColor="#FF5722"
                    android:textSize="13sp" />
                <!-- Đánh giá và lượt bán -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <!-- Rating -->
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_star" />

                    <!-- Điểm đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:paddingStart="2dp" />

                    <!-- Số lượt đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(49)"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:paddingStart="4dp" />

                    <!-- Icon giỏ hàng và lượt bán -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_cart"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2k/month"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:paddingStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sản phẩm C -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@mipmap/ic_productC"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product C"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: 200.000 đ"
                    android:textColor="#FF5722"
                    android:textSize="13sp" />
                <!-- Đánh giá và lượt bán -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <!-- Rating -->
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_star" />

                    <!-- Điểm đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:paddingStart="2dp" />

                    <!-- Số lượt đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:paddingStart="4dp" />

                    <!-- Icon giỏ hàng và lượt bán -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_cart"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2k/month"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:paddingStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sản phẩm D -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@mipmap/ic_productD"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product D"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: 99.000 đ"
                    android:textColor="#FF5722"
                    android:textSize="13sp" />
                <!-- Đánh giá và lượt bán -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <!-- Rating -->
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_star" />

                    <!-- Điểm đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="#FF9800"
                        android:textSize="12sp"
                        android:paddingStart="2dp" />

                    <!-- Số lượt đánh giá -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(3)"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:paddingStart="4dp" />

                    <!-- Icon giỏ hàng và lượt bán -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_cart"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2k/month"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:paddingStart="4dp" />
                </LinearLayout>
            </LinearLayout>
        </GridLayout>

        <!-- Nút chat nổi -->
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:background="@null"
            android:src="@mipmap/ic_chat"
            android:contentDescription="Chat"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
